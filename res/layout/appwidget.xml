<Button 
    android:paddingRight="5dip"
    android:paddingBottom="5dip"
    android:layout_alignParentBottom="true"
    android:background="@drawable/player"
    android:layout_alignParentRight="true"
    android:text="" 
    android:id="@+id/buttonDownload" 
    android:layout_width="50dip" 
    android:layout_height="50dip"
    />
<Button 
    android:paddingRight="5dip"
    android:paddingBottom="5dip"
    android:layout_alignParentBottom="true"
    android:background="@drawable/playpause"
    android:layout_toLeftOf="@+id/buttonDownload"
    android:text="" 
    android:id="@+id/buttonPlaypause" 
    android:layout_width="50dip" 
    android:layout_height="50dip"
    />

<Button 
    android:paddingRight="5dip"
    android:paddingBottom="5dip"
    android:background="@drawable/like_set"
	android:layout_alignParentBottom="true"
    android:layout_toLeftOf="@+id/buttonDownload"
    android:text="" 
    android:id="@+id/buttonLikeSet" 
    android:layout_width="50dip" 
    android:layout_height="50dip"
    />
<Button 
    android:paddingRight="5dip"
    android:paddingBottom="5dip"
    android:background="@drawable/like_unset"
	android:layout_alignParentBottom="true"
    android:layout_toLeftOf="@+id/buttonDownload"
    android:text="" 
    android:id="@+id/buttonLikeUnset" 
    android:layout_width="50dip" 
    android:layout_height="50dip"
    />
<Button 
    android:paddingRight="5dip"
    android:paddingBottom="5dip"
