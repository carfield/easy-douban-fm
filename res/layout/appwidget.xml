<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/appwidget_bg"
    >

<ImageView 
	android:src="@drawable/default_album" 
	android:layout_width="120dip" 
	android:id="@+id/imageCover"
	android:layout_alignParentLeft="true" 
	android:layout_height="fill_parent"></ImageView>
	
<Button 
	android:background="@drawable/down_button_pause"
	android:layout_toRightOf="@+id/imageCover"
	android:text="" 
	android:id="@+id/buttonSwitch" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"></Button>
	
<Button 
	android:background="@drawable/down_button_running"
	android:layout_toRightOf="@+id/buttonSwitch"
	android:text="" 
	android:id="@+id/buttonStop" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"></Button>
	
<Button 
	android:background="@drawable/btn_mode_switch_knob_pressed"
	android:layout_toRightOf="@+id/buttonStop"
	android:layout_alignParentRight="true" 
	android:text="" 
	android:id="@+id/buttonClose" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"></Button>
</RelativeLayout>
