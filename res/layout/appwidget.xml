<TextView 
    android:paddingLeft="10dip"
    android:paddingRight="5dip"
    android:id="@+id/textArtist" 
    android:textSize="18dip"     
    android:textColor="#ffd030"   
    android:layout_toRightOf="@+id/imageCover" 
    android:layout_below="@+id/buttonMenu"
    android:layout_alignTop="@+id/imageCover"
    android:text="" 
    android:layout_height="50dip" 
    android:layout_width="fill_parent" 
    android:gravity="center"
    />
<TextView 
    android:paddingLeft="10dip"
    android:paddingRight="5dip"
    android:id="@+id/textTitle" 
    android:textSize="14dip"     
    android:textColor="#ffffff"   
    android:layout_alignLeft="@+id/textArtist" 
    android:layout_below="@+id/textArtist" 
    android:text="" 
    android:gravity="center"
    android:layout_height="50dip" 
    android:layout_width="fill_parent" 
    />

<Button 
    android:paddingRight="5dip"
    android:paddingTop="5dip"
    android:background="@drawable/on"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:text="" 
    android:id="@+id/buttonOn" 
    android:layout_width="50dip" 
    android:layout_height="50dip"
    />
<Button 
    android:paddingRight="5dip"
    android:paddingTop="5dip"
    android:background="@drawable/onoff"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:text="" 
    android:id="@+id/buttonOnOff" 
    android:layout_width="50dip" 
    android:layout_height="50dip"
    />
<Button 
    android:paddingRight="5dip"
    android:paddingTop="5dip"
    android:background="@drawable/off"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:text="" 
    android:id="@+id/buttonOff" 
    android:layout_width="50dip" 
    android:layout_height="50dip"
    />

