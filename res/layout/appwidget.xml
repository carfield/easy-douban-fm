<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/appwidget_bg"
    >
<ImageButton 
    android:paddingLeft="5dip"
    android:paddingTop="5dip"
    android:src="@drawable/menu"
    android:background="@drawable/transparent"
    android:scaleType="fitCenter"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:text="" 
    android:id="@+id/buttonMenu" 
    android:layout_width="50dip" 
    android:layout_height="50dip"
    />
<ImageButton 
    android:paddingLeft="3dip"
    android:paddingTop="3dip"
    android:src="@drawable/hate"
    android:background="@drawable/transparent"
    android:layout_alignParentTop="true"
    android:scaleType="fitCenter"
    android:layout_toRightOf="@+id/buttonMenu"
    android:text="" 
    android:id="@+id/buttonHate" 
    android:layout_width="50dip" 
    android:layout_height="50dip"
    />

<Button 
    android:id="@+id/buttonChannel" 
    android:ellipsize="marquee"
    android:marqueeRepeatLimit ="marquee_forever"
    android:scrollHorizontally="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:textSize="20dip"     
    android:textColor="#ffffff"   
    android:background="@drawable/transparent"
    android:layout_alignTop="@+id/buttonMenu"
    android:layout_alignBottom="@+id/buttonMenu"
    android:layout_centerHorizontal="true"
    android:layout_toLeftOf="@+id/buttonOnOff"
    android:layout_toRightOf="@+id/buttonHate"
    android:text="@string/text_channel_unselected" 
    android:layout_height="50dip" 
    android:layout_width="fill_parent" 
    android:gravity="center|center_horizontal" 
    android:singleLine="true"/>
<ImageView
	android:id="@+id/imageCover" 
    android:paddingLeft="5dip"
    android:paddingBottom="5dip"
    android:paddingTop="5dip"
    android:paddingRight="5dip"
    android:layout_alignParentLeft="true"
    android:layout_alignParentBottom="true"
    android:layout_below="@+id/buttonChannel"
    android:layout_toLeftOf="@+id/buttonNext"
	android:src="@drawable/default_album" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	/>

<TextView
	android:singleLine="true"  
	android:ellipsize="marquee"
    android:marqueeRepeatLimit ="marquee_forever"
    android:scrollHorizontally="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:duplicateParentState="true"
    
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:id="@+id/textArtist" 
    android:textSize="18dip"     
    android:textColor="#ffd030"   
    android:layout_toRightOf="@+id/imageCover" 
    android:layout_below="@+id/buttonMenu"
    android:layout_above="@+id/textTitle"
    android:layout_alignTop="@+id/imageCover"
    android:text="" 
    android:layout_height="fill_parent" 
    android:layout_width="fill_parent" 
    android:gravity="center"
    >
    <requestFocus/> 
</TextView>
<TextView 
	android:singleLine="true"  
	android:ellipsize="marquee"
    android:marqueeRepeatLimit ="marquee_forever"
    android:scrollHorizontally="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:duplicateParentState="true"
	
    android:paddingLeft="10dip"
    android:paddingBottom="5dip"
    android:paddingRight="10dip"
    android:id="@+id/textTitle" 
    android:textSize="14dip"     
    android:textColor="#ffffff"   
    android:layout_alignLeft="@+id/textArtist" 
    android:layout_alignParentRight="true"
    android:layout_above="@+id/buttonNext" 
    android:text="" 
    android:layout_width="fill_parent"
    android:layout_height="30dip"  
    android:gravity="center|center_vertical"
    >
    <requestFocus/> 
</TextView>

<ImageButton 
    android:paddingRight="3dip"
    android:paddingTop="3dip"
    android:background="@drawable/transparent"
    android:src="@drawable/off"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:text="" 
    android:id="@+id/buttonOnOff" 
    android:layout_width="50dip" 
    android:layout_height="50dip"
    android:scaleType="fitCenter"/>

