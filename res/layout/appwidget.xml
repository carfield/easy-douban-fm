	android:background="@drawable/start"
	android:layout_alignParentBottom="true"
	android:layout_toLeftOf="@+id/buttonLikeSet"
	android:text="" 
	android:id="@+id/buttonNext" 
	android:layout_width="50dip" 
	android:layout_height="50dip"
	/>
