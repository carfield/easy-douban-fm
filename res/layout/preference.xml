<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
android:id="@+id/scroll" 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/ios5background" 
            >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="50dip"		   
		    >
			<CheckBox 
		    	android:text="@string/radio_shake" 
		    	android:id="@+id/cbShakeEnable" 
		    	android:textColor="#ffffff"
		    	android:layout_width="fill_parent" 
		    	android:layout_weight="1"
		    	android:layout_height="fill_parent">
		    </CheckBox>
		    <Spinner 		    	
		    	android:layout_width="wrap_content" 
		    	android:layout_height="fill_parent" 
		    	android:id="@+id/spinnerActionShake"
		    	android:prompt="@string/options_act"
		    	>
	    	</Spinner>
	    </LinearLayout>

	   	<LinearLayout
	   	    xmlns:android="http://schemas.android.com/apk/res/android"
	   	    android:layout_width="fill_parent"
	   	    android:layout_height="50dip"
	   	    android:gravity="center"
	   	    android:orientation="horizontal" >

	   		<TextView 
	   			android:paddingLeft="40dip"
	   			android:textAppearance="?android:attr/textAppearanceMedium"
	   			android:layout_height="fill_parent"
	   			android:singleLine="true" 
	   			android:textColor="#ffffff"
	   			android:layout_weight="1"
	   			android:layout_width="fill_parent" 
	   			android:text="@string/text_shake_accuracy" 
	   			android:id="@+id/textView1" 
	   			android:gravity="center_vertical"
	   			/>
	   		<SeekBar
	   		    android:id="@+id/seekBarShakeThreshold"
	   		    android:layout_width="fill_parent"
	   		    android:layout_height="fill_parent"
	   		    android:layout_weight="1" 
	   		    />
		    <!-- <EditText 
		    	android:layout_height="fill_parent" 
		    	android:id="@+id/editShakeThreshold" 
		    	android:layout_width="120dip" 
		    	android:numeric="integer"
		    	/> -->
	   	</LinearLayout>
   	</LinearLayout>
   	<TextView
    	android:id="@+id/border01"
    	android:background="@drawable/divider_horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	/>
   	<LinearLayout
   		xmlns:android="http://schemas.android.com/apk/res/android" 
   		android:orientation="horizontal"
   		android:layout_width="fill_parent"
   		android:layout_height="50dip"
   		
   		>
	    <CheckBox 
	    	android:text="@string/radio_media_button" 
	    	android:id="@+id/cbMediaButtonEnable" 
	    	android:textColor="#ffffff"
	    	android:layout_weight="1"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="fill_parent">
	    </CheckBox>
	    <Spinner 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="fill_parent" 
	    	android:id="@+id/spinnerActionMediaButton"
	    	android:prompt="@string/options_act"
	    	>
    	</Spinner>
    </LinearLayout>
    <TextView
    	android:id="@+id/border02"
    	android:background="@drawable/divider_horizontal"
