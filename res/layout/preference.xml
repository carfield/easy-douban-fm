			android:text="@string/radio_camera_button_1" 
		   	android:textColor="#ffffff"
	    	android:layout_height="50dip" 
		   	android:id="@+id/text10" 
		   	android:layout_width="fill_parent" android:gravity="center_vertical">
		</TextView>
    </LinearLayout>
